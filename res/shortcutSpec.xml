<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <skipIfNotSupported />

  <programGroup defaultName="Matrex" location="applications"/>


  <shortcut
     name="Matrex"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="javaw"
     commandLine="-jar &quot;$INSTALL_PATH\matrex_start.jar&quot;"
     workingDirectory="$INSTALL_PATH"
     description="Start Matrex"
     iconFile="$INSTALL_PATH\images\matrex_ico.ico"
     iconIndex="0"
     initialState="noShow">   
     <createForPack name="Base"/>     
   </shortcut>

   <shortcut
     name="Matrex Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
     commandLine=""
     description="Matrex uninstaller">
     
     <createForPack name="Base" />
   </shortcut>
   
</shortcuts>
